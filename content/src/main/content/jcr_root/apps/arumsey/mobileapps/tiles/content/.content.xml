<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        jcr:mixinTypes="[sling:Resource]"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="mobileapps/gui/components/dashboard/tile"
        class="cq-apps-CardDashboard-Content"
        colspan="2"
        order="{Long}40">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="mobileapps/gui/components/dashboard/layouts/tile"/>
        <header jcr:primaryType="nt:unstructured">
            <title
                jcr:primaryType="nt:unstructured"
                jcr:title="Content"/>
        </header>
        <body
            jcr:primaryType="nt:unstructured"
            sling:resourceType="mobileapps/gui/components/dashboard/tiles/content/body"
            maxBodyTableRows="5">
            <datasource
                jcr:primaryType="nt:unstructured"
                sling:resourceType="mobileapps/gui/components/datasources/contentdatasource"
                appPath="${requestPathInfo.suffix}"
                limit="${empty requestPathInfo.selectors[1] ? &quot;150&quot; : requestPathInfo.selectors[1]}"
                offset="${requestPathInfo.selectors[0]}"
                pgeTypes="[assets,app-content]"/>
        </body>
        <footer
            jcr:primaryType="nt:unstructured"
            href="/libs/mobileapps/admin/content/dashboard/content.html${requestPathInfo.suffix}"/>
    </jcr:content>
</jcr:root>
